<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <% if (locals.name) { %>
      <p>Welcome, <%= name %></p>
      <% } %> <% if (locals.id) { %>
      <div class="generated-url">
        <p>
          URL Generated:
          <a href="http://localhost:8000/url/<%= id %>" target="_blank"
            >http://localhost:8000/url/<%= id %></a
          >
        </p>
      </div>
      <% } %>

      <form method="post" action="/url">
        <label for="urlSubmit">Enter your URL</label>
        <input
          type="text"
          name="url"
          id="urlSubmit"
          placeholder="e.g., https://example.com"
        />
        <button type="submit">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-lightning-charge-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M11.251.068a.5.5 0 0 1 .227.58L9.677 7.5H13.5a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H2.5a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09z"
            />
          </svg>
          Generate Short URL
        </button>
      </form>

      <% if (locals.urls && locals.urls.length > 0) { %>
      <h2>Previously Shortened URLs</h2>
      <table>
        <thead>
          <tr>
            <th>S No.</th>
            <th>Short ID</th>
            <th>Redirect URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a
                href="http://localhost:8000/url/<%= url.shortId %>"
                target="_blank"
                ><%= url.shortId %></a
              >
            </td>
            <td>
              <a href="<%= url.redirectURL %>" target="_blank"
                ><%= url.redirectURL %></a
              >
            </td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>

      

      <div class="signout">
        <form action="/user/signout" method="get">
            <button type="submit">Signout</button>
        </form>
      </div>
    </div>
  </body>
</html>
